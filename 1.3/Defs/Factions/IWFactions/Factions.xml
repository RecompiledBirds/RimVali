<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <FactionDef ParentName="FactionBase">
    <defName>AvaliIndepenentWorldsTribal</defName>
    <label>Independent Worlds Avali Pack (Tribal)</label>
    <description>A pack of tribal independent worlds avali.</description>
    <pawnSingular>Avali</pawnSingular>
    <pawnsPlural>Avali</pawnsPlural>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>Pack Leader</leaderTitle>
    <colorSpectrum>
      <li>(1, 0.52, 0.05)</li>
      <li>(1, 1, 1)</li>
      <li>(0,0,0)</li>
      <li>(0,1,0)</li>
      <li>(1,0,0)</li>
      <li>(0,0,1)</li>
    </colorSpectrum>

    <factionNameMaker>NamerFactionOutlander</factionNameMaker>
    <settlementNameMaker>AvaliFactionBaseNamer</settlementNameMaker>
    <techLevel>Neolithic</techLevel>

    <backstoryCategories>
      <li>RimValiBackstories</li>
      <li>Tribal</li>
    </backstoryCategories>

    <caravanTraderKinds>
      <li>Caravan_Neolithic_BulkGoods</li>
      <li>Caravan_Neolithic_WarMerchant</li>
      <li>Caravan_Neolithic_Slaver</li>
      <li>Caravan_Neolithic_ShamanMerchant</li>
    </caravanTraderKinds>

    <visitorTraderKinds>
      <li>Visitor_Outlander_Standard</li>
    </visitorTraderKinds>
    <baseTraderKinds>
      <li>Base_Outlander_Standard</li>
    </baseTraderKinds>

    <allowedArrivalTemperatureRange>-200~8</allowedArrivalTemperatureRange>

    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0, 35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(10000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
        <options>
          <IWTribalAvaliWarrior>200</IWTribalAvaliWarrior>
          <IWTribeLeader>100</IWTribeLeader>
        </options>
      </li>
      <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <IWTribalAvaliVillager>100</IWTribalAvaliVillager>
          <IWTribeLeader>10</IWTribeLeader>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <IWTribalAvaliVillager>200</IWTribalAvaliVillager>
        </traders>
        <carriers>
          <Muffalo>20</Muffalo>
        </carriers>
        <guards>
          <IWTribalAvaliWarrior>150</IWTribalAvaliWarrior>
        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <IWTribalAvaliVillager>100</IWTribalAvaliVillager>
          <IWTribalAvaliWarrior>100</IWTribalAvaliWarrior>
          <IWTribeLeader>150</IWTribeLeader>
        </options>
      </li>
    </pawnGroupMakers>
    <settlementTexturePath>Avali/WorldIcons/Town</settlementTexturePath>
    <factionIconPath>Avali/Symbols/Rimvali_Logo_2</factionIconPath>
  </FactionDef>

