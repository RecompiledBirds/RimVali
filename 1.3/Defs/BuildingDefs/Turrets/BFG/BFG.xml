<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>AvaliBFG</defName>
    <size>(2,2)</size>
    <drawerType>MapMeshAndRealTime</drawerType>
    <label>BFG turret</label>
    <description>A very heavy railturret. No-one was truly prepared for what one would be able to find on the Rim, predators were always expected, but Mechanoids and other highly armoured creatures sometimes proved to be difficult to be taken out with normal Avali weapons. Because of that fact, this weapon was designed. Sporting a highly accurate railgun, it is able to rip off most limbs with a single shot and frequently makes short work of its targets. Because of its large size and overwhelming power, it has quite comically been nicknamed as the "BFG".</description>
    <thingClass>Building_TurretGun</thingClass>
    <graphicData>
      <texPath>avali/Buildings/Turrets/Avali_Turret_Base_2x2</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
      <shadowData>
        <volume>(0.27,0.25,0.27)</volume>
        <offset>(0,0,0)</offset>
      </shadowData>
    </graphicData>
    <uiIconPath>avali/Buildings/Turrets/BFG/BFG_GUI_IMG</uiIconPath>
    <uiIconScale>0.90</uiIconScale>
    <minifiedDef>MinifiedThing</minifiedDef>
    <altitudeLayer>Building</altitudeLayer>
    <stealable>false</stealable>
    <rotatable>false</rotatable>
    <thingCategories>
      <li>BuildingsSecurity</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>500</MaxHitPoints>
      <Flammability>0.7</Flammability>
      <WorkToBuild>1800</WorkToBuild>
      <Mass>10</Mass>
      <Beauty>-20</Beauty>
      <ShootingAccuracyTurret>1.1</ShootingAccuracyTurret>
    </statBases>
    <tickerType>Normal</tickerType>
    <comps>
      <li Class="CompProperties_Explosive">
        <wickTicks>240</wickTicks>
        <explosiveRadius>3.9</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <chanceNeverExplodeFromDamage>0.5</chanceNeverExplodeFromDamage>
      </li>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>80</basePowerConsumption>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>2</glowRadius>
        <glowColor>(255,123,0,255)</glowColor>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Breakdownable"/>
      <li Class="CompProperties_Refuelable">
        <fuelLabel>Ammo until  refuel</fuelLabel>
        <fuelGizmoLabel>Ammunition left: </fuelGizmoLabel>
        <outOfFuelMessage>Cannot shoot: Needs ammo.</outOfFuelMessage>
        <fuelFilter><thingDefs><li>BFGAmmo</li></thingDefs></fuelFilter>
        <fuelCapacity>30</fuelCapacity>
        <fuelMultiplier>0.75</fuelMultiplier>
        <initialFuelPercent>1</initialFuelPercent>
        <autoRefuelPercent>0.5</autoRefuelPercent>
        <showFuelGizmo>true</showFuelGizmo>
        <minimumFueledThreshold>1</minimumFueledThreshold>
        <factorByDifficulty>true</factorByDifficulty>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
        <fuelIconPath>UI/Overlays/Barrel</fuelIconPath>
      </li>
    </comps>

    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <fillPercent>0.4</fillPercent>
    <hasTooltip>true</hasTooltip>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>30</costStuffCount>
    <costList>
      <Steel>300</Steel>
      <Plasteel>30</Plasteel>
      <ComponentSpacer>1</ComponentSpacer>
      <AvaliTungstenPowder>30</AvaliTungstenPowder>
      <ComponentIndustrial>6</ComponentIndustrial>
    </costList>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <constructionSkillPrerequisite>5</constructionSkillPrerequisite>
    <building>
      <combatPower>60</combatPower>   <!-- same as a scavenger -->
      <ai_combatDangerous>true</ai_combatDangerous>
      <turretGunDef>BFGGun</turretGunDef>
      <turretBurstCooldownTime>4.8</turretBurstCooldownTime>
      <turretTopDrawSize>3.5</turretTopDrawSize>
    </building>
    <placeWorkers>
      <li>PlaceWorker_TurretTop</li>
      <li>PlaceWorker_ShowTurretRadius</li>
    </placeWorkers>
    <designationHotKey>Misc2</designationHotKey>
    <researchPrerequisites>
      <li>AvaliTurrets</li>
    </researchPrerequisites>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>BFGBullet</defName>
    <label>BFG bullet</label>
    <graphicData>
      <texPath>avali/Buildings/Turrets/BFG/BFG_sabot_launched</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>50</damageAmountBase>
      <speed>100</speed>
      <stoppingPower>5</stoppingPower>
      <armorPenetrationBase>2</armorPenetrationBase>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundExplode>MortarBomb_Explode</soundExplode>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="BaseWeaponTurret">
    <defName>BFGGun</defName>
    <label>BFG</label>
    <description>BFG</description>
    <graphicData>
      <texPath>avali/Buildings/Turrets/BFG/BFG_turret</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.5</drawSize>
    </graphicData>
    <statBases>
      <AccuracyTouch>0.9</AccuracyTouch>
      <AccuracyShort>1</AccuracyShort>
      <AccuracyMedium>1</AccuracyMedium>
      <AccuracyLong>2</AccuracyLong>
      <RangedWeapon_Cooldown>8.8</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
      <Mass>5</Mass>
      <Flammability>0</Flammability>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <defaultProjectile>BFGBullet</defaultProjectile>
        <warmupTime>0</warmupTime>
        <minRange>10</minRange>
        <range>56</range>
        <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
        <burstShotCount>1</burstShotCount>
        <soundCast>GunShotA</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <consumeFuelPerShot>1</consumeFuelPerShot>
      </li>
    </verbs>
  </ThingDef>
</Defs>
