<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BedWithQualityBase">
	<designationCategory>RimVali_AvaliFurniture</designationCategory>
    <defName>AvaliHammock</defName>
    <label>Avali hammock</label>
    <description>A cozy hammock suspended between two poles specially designed for resting and Avali in mind.</description>
    <graphicData>

		<texPath>RimValiFFA/Buildings/Furniture/hammock_bed</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(1,2)</drawSize>
    </graphicData>
    <castEdgeShadows>True</castEdgeShadows>
    <statBases>
      <MaxHitPoints>75</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Mass>2.5</Mass>
      <BedRestEffectiveness>0.95</BedRestEffectiveness>
      <ImmunityGainSpeedFactor>1.05</ImmunityGainSpeedFactor>
      <Comfort>0.68</Comfort>
      <WorkToBuild>600</WorkToBuild>
    </statBases>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>Dresser</li>
          <li>EndTable</li>
          <li>IlluminateEndTable</li>
        </linkableFacilities>
      </li>
    </comps>
    <size>(1,2)</size>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <costStuffCount>40</costStuffCount>
    <building>
      <bed_showSleeperBody>false</bed_showSleeperBody>
      <bed_healPerDay>4</bed_healPerDay>
      <bed_caravansCanUse>true</bed_caravansCanUse>
      <destroySound>BuildingDestroyed_Soft_Medium</destroySound>
      <destroyShakeAmount>0</destroyShakeAmount>
    </building>
    <pathCost>14</pathCost>
    <passability>Standable</passability>
    <designationHotKey>Misc2</designationHotKey>
  </ThingDef>

  <ThingDef ParentName="BedWithQualityBase">
	<designationCategory>RimVali_AvaliFurniture</designationCategory>
    <defName>AvaliBed</defName>
    <label>Avali bed</label>
    <description>A cozy mattress and sheets on a frame for resting. Inspired by its Terran counterparts, this model has been redesigned to better suit an Avali's smaller stature.</description>
    <graphicData>
      <texPath>RimValiFFA/Buildings/Furniture/casket_bed</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(1,2)</drawSize>
      <damageData>
        <rect>(0,0.05,1,1.95)</rect>
      </damageData>
    </graphicData>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>EndTable</li>
          <li>Dresser</li>
          <li>IlluminateEndTable</li>

        </linkableFacilities>
      </li>
    </comps>
    <statBases>
      <MaxHitPoints>140</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Beauty>1</Beauty>
      <WorkToBuild>800</WorkToBuild>
      <Mass>30</Mass>
      <BedRestEffectiveness>1</BedRestEffectiveness>
      <Comfort>0.75</Comfort>
      <ImmunityGainSpeedFactor>1.07</ImmunityGainSpeedFactor>
      <SurgerySuccessChanceFactor>1</SurgerySuccessChanceFactor>
    </statBases>
    <size>(1,2)</size>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>45</costStuffCount>
    <building>
      <bed_showSleeperBody>False</bed_showSleeperBody>
      <bed_healPerDay>4</bed_healPerDay>
    </building>
    <fillPercent>0.4</fillPercent>
    <pathCost>42</pathCost>
    <staticSunShadowHeight>0.17</staticSunShadowHeight>
    <castEdgeShadows>True</castEdgeShadows>
    <designationHotKey>Misc2</designationHotKey>
    <techLevel>Medieval</techLevel>
    <researchPrerequisites>
      <li>ComplexFurniture</li>
    </researchPrerequisites>
    <uiIconScale>0.90</uiIconScale>
  </ThingDef>
