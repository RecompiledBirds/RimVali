<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
  <ThoughtDef>
    <defName>AvaliPackLoss</defName>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <validWhileDespawned>true</validWhileDespawned>
    <workerClass>AvaliMod.PackLossThoughtWorker</workerClass>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>Pack loss</label>
        <description>I miss my packmates... sometimes, I think I still hear them.</description>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
      <li>
        <label>Pack loss</label>
        <description>Everyone seems to think I'm going crazy... I'm not... am I?</description>
        <baseMoodEffect>-20</baseMoodEffect>
      </li>
      <li>
        <label>Pack loss</label>
        <description>I hear them, I see them.. they're everywhere.</description>
        <baseMoodEffect>-30</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <defName>SharedRoomWithPack</defName>
    <stackLimit>1</stackLimit>
    <durationDays>0.5</durationDays>
    <stages>
      <li>
        <label>Slept with packmates</label>
        <description>I got to sleep with my packmates.</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <defName>BedroomWithoutPack</defName>
    <stackLimit>1</stackLimit>
    <durationDays>0.5</durationDays>
    <stages>
      <li>
        <label>Slept without packmates</label>
        <description>I had to sleep without my packmates.</description>
        <baseMoodEffect>-8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>AvaliPackmateThought</defName>
    <stackLimit>100</stackLimit>
    <durationDays>20</durationDays>
    <stackLimitForSameOtherPawn>1</stackLimitForSameOtherPawn>
    <thoughtClass>Thought_MemorySocial</thoughtClass>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>Packmate</label>
        <baseOpinionOffset>80</baseOpinionOffset>
      </li>
    </stages>
  </ThoughtDef>
</Defs>