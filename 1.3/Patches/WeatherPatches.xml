<?xml version="1.0" encoding="utf-8" ?>
<!-- Adds responses to snowy weather -->
<Patch>
  <Operation Class="PatchOperationSequence">
    <operations>
      <li Class="PatchOperationInsert">
        <xpath>/Defs/WeatherDef[defName="SnowHard"]/label</xpath>
        <value>
          <exposedThought>SnowyWeather</exposedThought>
        </value>
      </li>
      <li Class="PatchOperationInsert">
        <xpath>/Defs/WeatherDef[defName="SnowGentle"]/label</xpath>
        <value>
          <exposedThought>SnowyWeather</exposedThought>
        </value>
      </li>
    </operations>
  </Operation>
</Patch>