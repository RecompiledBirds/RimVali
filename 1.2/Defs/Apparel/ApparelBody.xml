<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>AvaliTDW</defName>
    <label>Avali traditional wear</label>
    <description>Traditional avali clothing. It's lightweight, and comfortable. It also has some chimes on it, which the avali like.</description>
    <recipeMaker>
        <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
   
    <graphicData>
      <texPath>avali/Things/Apparel/TraditionalWear/TraditionalWear_Avali_south</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.00</drawSize>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <costStuffCount>40</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>AvaliApparel</li>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <WorkToMake>530</WorkToMake>
      <Mass>0.05</Mass>
      <StuffEffectMultiplierArmor>0.02</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.02</StuffEffectMultiplierInsulation_Cold>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
    
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Shoulders</li>
        <li>RightLeg</li>
        <li>Pelvis</li>
      </bodyPartGroups>
      <wornGraphicPath>avali/Things/Apparel/TraditionalWear/TraditionalWear</wornGraphicPath>
      <useWornGraphicMask>true</useWornGraphicMask>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <tags>
        <li>Avali</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>
    
 
  
  
  
  
  
    <!-- HUD -->
   <ThingDef ParentName="ApparelMakeableBase">
    <defName>AvaliHUD</defName>
      
    <label>Avali HUD [placeholder]</label>
    <description>An avali HUD. [placeholder]</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
       <researchPrerequisite>AvaliBasicTechGear</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>avali/Things/Apparel/HUD/hud_south</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.25</uiIconScale>
    <generateCommonality>2</generateCommonality>
    <statBases>
      <WorkToMake>500</WorkToMake>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>0.1</Mass>
      <Flammability>0.02</Flammability>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <thingCategories>
      <li>AvaliHelmets</li>
      <li>Apparel</li>
    </thingCategories>
    <equippedStatOffsets>
      <ShootingAccuracyPawn>3.5</ShootingAccuracyPawn>
       <ResearchSpeed>5.5</ResearchSpeed>
    </equippedStatOffsets>
    <costList>
      <ComponentSpacer>5</ComponentSpacer>
      <AvaliAerogel>5</AvaliAerogel>
      <AvaliTungstenPowder>5</AvaliTungstenPowder>
      <Steel>5</Steel>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>avali/Things/Apparel/HUD/hud</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>Avali</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>false</useDeflectMetalEffect>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.9,0.9,0.9,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65,1)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>(0.3,0.3,0.3,1)</min>
          <max>(0.5,0.5,0.5,1)</max>
        </li>
      </options>
    </colorGenerator>
    <thingSetMakerTags>
      <li>RewardStandardHighFreq</li>
    </thingSetMakerTags>
    <comps>
      <li Class="CompProperties_BiocodableApparel"/>
    </comps>
  </ThingDef>
  
  
